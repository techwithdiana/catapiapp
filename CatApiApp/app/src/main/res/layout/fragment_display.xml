<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D8F3FF"
        tools:context=".DisplayFragment">

        <TextView
            android:id="@+id/catDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Description:"
            android:textColor="#0064B3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/catTemperament" />

        <TextView
            android:id="@+id/catLifeSpan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Life span:"
            android:textColor="#0064B3"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/catTemperament"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/catTemperament"
            app:layout_constraintTop_toBottomOf="@+id/catHeight" />

        <TextView
            android:id="@+id/catTemperament"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Temperament: "
            android:textColor="#0064B3"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/catDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/catDescription"
            app:layout_constraintTop_toBottomOf="@+id/catLifeSpan" />

        <ImageView
            android:id="@+id/catImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/catName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/catName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Name: "
            android:textColor="#0064B3"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/catWeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/catWeight"
            app:layout_constraintTop_toBottomOf="@+id/catImage" />

        <TextView
            android:id="@+id/catWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Weight: "
            android:textColor="#0064B3"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/catHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/catHeight"
            app:layout_constraintTop_toBottomOf="@+id/catName" />

        <TextView
            android:id="@+id/catHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Height:"
            android:textColor="#0064B3"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/catLifeSpan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/catLifeSpan"
            app:layout_constraintTop_toBottomOf="@+id/catWeight" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>